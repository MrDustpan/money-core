@model AccountIndexViewModel
@{
  ViewData["Title"] = "Accounts";
}

<div class="row">
  <div class="col-md-3">
    <h2>Accounts</h2>
  </div>
</div>
<div class="row">
  <div class="col-md-3">
    <a asp-controller="accounts" asp-action="add">Add Account</a>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Balance</th>
        </tr>
      </thead>
      <tbody>
        @foreach (var account in Model.Accounts)
        {
          <tr>
            <td>@account.Name</td>
            <td>@account.Balance</td>
          </tr>
        }
      </tbody>
    </table>
  </div>
</div>