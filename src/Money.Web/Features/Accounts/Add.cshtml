@model AddAccountViewModel
@{
  ViewData["Title"] = "Add Account";
}

<div class="row">
  <div class="col-sm-3 col-md-2 sidebar">
  </div>
  <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h1 class="page-header">Add Account</h1>
    <div class="row">
      <div class="col-md-3">
        <form method="POST">
          <div class="form-group">
            <input type="text" class="form-control" id="name" name="name" placeholder="Account Name">
          </div>
          <div class="form-group">
            <div class="input-group col-md-12">
              <div class="input-group-addon">$</div>
              <input type="text" class="form-control" id="currentBalance" name="currentBalance" placeholder="Current Balance">
            </div>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary">Add Account</button>
            <a asp-controller="accounts" asp-action="index" class="btn btn-default">Cancel</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>